<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
             >

    <ImageView
        android:id="@+id/settings_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background_for_camera_fragment"
        android:scaleType="centerCrop"
        android:src="@drawable/background_no_logo" />

    <TextView
            android:id="@+id/register"
            android:layout_width="152dp"
            android:layout_height="82dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="158dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/registerBold"/>

    <EditText
            android:id="@+id/remail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/light_pale_yellow"
            android:backgroundTint="@color/light_pale_yellow"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:importantForAutofill="no"/>

    <EditText
            android:id="@+id/rpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remail"
            android:layout_marginTop="9dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/light_pale_yellow"
            android:backgroundTint="@color/light_pale_yellow"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:importantForAutofill="no"/>

    <EditText
            android:id="@+id/cpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rpassword"
            android:layout_marginTop="9dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/light_pale_yellow"
            android:backgroundTint="@color/light_pale_yellow"
            android:gravity="center"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:importantForAutofill="no"/>

    <Button
            android:id="@+id/rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cpassword"
            android:layout_marginTop="19dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/custom_red"
            android:textColor="@color/white"
            android:text="@string/register"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rbtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/existinguser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/existing_user"/>

            <Button
                    android:id="@+id/lbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:text="@string/login"
                    android:textColor="@color/light_pale_yellow"
                    android:textSize="12sp"/>
        </LinearLayout>

</RelativeLayout>